<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.threatconnect.sdk</groupId>
	<artifactId>threatconnect-sdk-parent</artifactId>
	<version>2.3</version>
	<packaging>pom</packaging>
	<name>ThreatConnect SDK Parent</name>

	<modules>
		<module>threatconnect-sdk</module>
		<module>threatconnect-app</module>
	</modules>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>
		<github.global.server>github</github.global.server>

		<!-- ThreatConnect SDK Version -->
		<version.this>2.3</version.this>

		<!-- Dependency Versions -->
		<version.commons-codec>1.9</version.commons-codec>
		<version.commons-validator>1.5.0</version.commons-validator>
		<version.apache-http>4.4.1</version.apache-http>
		<version.jackson>2.5.3</version.jackson>
		<version.dozer>5.5.1</version.dozer>
		<version.gson>2.3</version.gson>

		<!-- Logging Versions -->
		<version.slf4j>1.7.12</version.slf4j>

		<!-- Test Dependency Versions -->
		<version.junit>4.12</version.junit>
		<version.test-beangen>2.5-RELEASE</version.test-beangen>
	</properties>

	<distributionManagement>
		<repository>
			<id>internal.repo</id>
			<name>Temporary Staging Repository</name>
			<url>file://${project.build.directory}/mvn-repo-${project.version}</url>
		</repository>
	</distributionManagement>
</project>